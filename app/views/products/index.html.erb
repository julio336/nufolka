<% title "Products" %>
<div class="container">
	
	<div class="clearfix masonry" id="contenedor">
		  
		<% @products.each do |product| %>
				<div class="span4">	
						<div class="box photo col3 masonry-brick">
	            			<h2><%= product.title %></h2>
							<p><%= image_tag "/nufolka/#{product.image_url}" %></p>
							<div class="caption">
								<p>Descripci√≥n: <span><%= print_description(product.description) %></span></p>
								<p>Precio: <span><strong><%= print_price(product.price) %></strong></span></p>
								<p><%= link_to "View", product_path(product) %></p>
								
								<p><%= link_to "Edit", product_path(product), {:remote => true, 'data-controls-modal' =>  "modal-window", 'data-backdrop' => true, 'data-keyboard' => true} %></p>
								
								
						    </div>
			            </div>
		         </div>
		 <% end %>
	</div>
</div>



	
<script> 
 
  $(function(){

    var $container = $('#contenedor');
  
    $container.imagesLoaded( function(){
      $container.masonry({
        itemSelector : '.box'
      });
    });
  
  });
  </script>

			
